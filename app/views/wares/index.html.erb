<% @wares.each do |ware| %>
  <tr>
    <td><%= ware.kod %></td>
    <td><%= ware.nazwa %></td>
    <td><%= ware.podatek %></td>
    <td><%= ware.grupa %></td>
    <td><%= ware.platnosc %></td>
    <td><%= ware.jednostka %></td>
    <td><%= ware.ilosc %></td>
    <td><%= ware.cena_netto %></td>
    <td><%= ware.cena %></td>
    <td><%= ware.op %></td>
    <td><%= ware.bl %></td>
    <td><%= link_to 'Show', ware %></td>
    <td><%= link_to 'Edit', edit_ware_path(ware) %></td>
    <td><%= link_to 'Destroy', ware, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

